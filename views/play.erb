<div style="transform-origin: left top 0;">
	<h1 style="transform: rotate(90deg)"><%= @game.player_1.name %> vs <%= @game.player_2.name %></h1>
</div>

<div style="text-align:center;">

	<div>

		<form style="display: inline;" action="/player_1_choice" method="POST">
		  <input type="hidden" name="choice" value="Lizard">
		  <input class="lizard" type="image" src="images/lizard.png" alt="Lizard" width="100px" height="100px">
		</form>

		<form style="display: inline;" action="/player_1_choice" method="POST">
		  <input type="hidden" name="choice" value="Paper">
		  <input class="paper" type="image" src="images/paper.png" alt="Paper" width="100px" height="100px">
		</form>

		<form style="display: inline;" action="/player_1_choice" method="POST">
		  <input type="hidden" name="choice" value="Rock">
		  <input class="rock" type="image" src="images/rock.png" alt="Rock" width="100px" height="100px">
		</form>

		<form style="display: inline;" action="/player_1_choice" method="POST">
		  <input type="hidden" name="choice" value="Scissors">
		  <input class="scissors" type="image" src="images/scissors.png" alt="Scissors" width="100px" height="100px">
		</form>

		<form style="display: inline;" action="/player_1_choice" method="POST">
		  <input type="hidden" name="choice" value="Spock">
		  <input class="spock" type="image" src="images/spock.png" alt="Spock" width="100px" height="100px">
		</form>

	</div>

	<h3>It's <%= @game.current_player.name %>'s turn.</h3>
	<h4>Pick a value</h4>

	<div style="position: absolute; bottom: 0; text-align:center;">

		<form style="display: inline;" action="/player_2_choice" method="POST">
		  <input type="hidden" name="choice" value="Lizard">
		  <input class="lizard" type="image" src="images/lizard.png" alt="Lizard" width="100px" height="100px">
		</form>

		<form style="display: inline;" action="/player_2_choice" method="POST">
		  <input type="hidden" name="choice" value="Paper">
		  <input class="paper" type="image" src="images/paper.png" alt="Paper" width="100px" height="100px">
		</form>

		<form style="display: inline;" action="/player_2_choice" method="POST">
		  <input type="hidden" name="choice" value="Rock">
		  <input class="rock" type="image" src="images/rock.png" alt="Rock" width="100px" height="100px">
		</form>

		<form style="display: inline;" action="/player_2_choice" method="POST">
		  <input type="hidden" name="choice" value="Scissors">
		  <input class="scissors" type="image" src="images/scissors.png" alt="Scissors" width="100px" height="100px">
		</form>

		<form style="display: inline;" action="/player_2_choice" method="POST">
		  <input type="hidden" name="choice" value="Spock">
		  <input class="spock" type="image" src="images/spock.png" alt="Spock" width="100px" height="100px">
		</form>

	</div>
</div>
